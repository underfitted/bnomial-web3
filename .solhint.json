{
    "extends": "solhint:recommended",
    "rules":{
	"max-line-length": "off",
	"avoid-suicide": "error",
        "avoid-sha3": "warn",
        "compiler-version": ["error", "^0.8.2"],
        "func-visibility": ["warn",{"ignoreConstructors":true}],
        "no-empty-blocks": "off",
        "reason-string": ["off"],
        "no-inline-assembly": "off",
	"quotes": "off"
    }
}
